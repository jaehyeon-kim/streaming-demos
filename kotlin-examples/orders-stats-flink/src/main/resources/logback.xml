<configuration>
    <!-- Set default root log level -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Optional: Override log level for your package -->
    <logger name="me.jaehyeon" level="INFO" />
</configuration>